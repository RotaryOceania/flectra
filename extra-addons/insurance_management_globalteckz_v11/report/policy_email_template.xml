<?xml version="1.0"?>
<flectra>
	<record id="email_template_policy_details" model="mail.template">
		<field name="name">Policy Details</field>
		<field name="email_from">${(user.email or '')|safe}</field>
		<field name="subject">${object.policy_holder.name} Policy Details</field>
		<field name="email_to">${object.policy_holder.email|safe}</field>
		<field name="lang">${object.policy_holder.lang}</field>
		<field name="report_template" ref="policy_sale_reports" />
		<field name="report_name">${(object.policy_holder.name or '')}_policy_details</field>
		<field name="model_id" ref="model_sale_policy" />
		<field name="auto_delete" eval="True" />
		<field name="body_html">
                <![CDATA[
					<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">
					
					    <p>Dear ${object.policy_holder.name},</p>
					    <p>
					    Dear Sir/Madam, Please find details below. If you have any queries regarding your policy, Please contact us. Thank you in advance for your cooperation.
					    </br>
					    </p>
					    </br>
					    <p></br>Best Regards,    </p>
					    <p></br>${user.name}    </p>
					</div>
            ]]>
		</field>
	</record>

</flectra>
